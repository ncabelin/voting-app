<% include partials/header.ejs %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Add Poll</h1>
      <% if (message) { %>
        <div class="alert alert-success alert-dismissible"><%= message %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
      <% } %>
    </div>
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <form method="POST" class="form">
          <div class="img-responsive" id="preview"></div>
          <div class="form-group">
            <input type="text" name="picture" placeholder="Picture URL (link)" class="form-control" id="preview-input">
            <div class="btn btn-default btn-xs" id="preview-btn">preview</div>
          </div>
          <div class="form-group">
            <input type="text" name="question" placeholder="Question" class="form-control"/>
          </div>
          <div class="form-group">
            <textarea type="text" name="options" placeholder="Options: separate by a new line (hit enter)" rows="8" class="form-control"></textarea>
          </div>
          <input type="submit" class="btn btn-default" value="Submit">
        </form>
      </div>
    </div>
  </div>
</div>
<% include partials/scripts.ejs %>
<script>
$(document).ready(function() {
  $('#preview-btn').click(function() {
    console.log($('#preview-input').val());
    $('#preview').html('<img src="' + $('#preview-input').val() + '" class="img-responsive">')
  });
});
</script>
